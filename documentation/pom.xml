                        <artifactId>colorize</artifactId>
                        <version>0.8.1</version>
                        <type>gem</type>
                    </dependency>
                    <dependency>
                        <groupId>rubygems</groupId>
                        <artifactId>typhoeus</artifactId>
                        <version>0.7.3</version>
                        <type>gem</type>
                    </dependency>
                    <dependency>
                        <groupId>rubygems</groupId>
