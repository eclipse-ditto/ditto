                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                        <updatePolicy>never</updatePolicy>
                    </snapshots>
                </repository>
            </repositories>
            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>rubygems</groupId>
                        <artifactId>html-proofer</artifactId>
                        <version>3.7.4</version>
                        <type>gem</type>
                    </dependency>
                    <!-- html-proofer dependencies - explicitly defined so the gem proxy resolution works faster in the build: -->
                    <dependency>
                        <groupId>rubygems</groupId>
