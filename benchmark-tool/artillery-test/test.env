# ====================
# DITTO CONFIGURATION
# ====================

DITTO_BASE_URI=localhost:8080
DITTO_HTTP_PROTOCOL=http
DITTO_WS_PROTOCOL=ws
DITTO_PRE_AUTHENTICATED_HEADER_VALUE=nginx:ditto
DITTO_USER=ditto
DITTO_PASSWORD=ditto
DITTO_DEVOPS_USER=devops
DITTO_DEVOPS_PASSWORD=foobar
DITTO_HTTP_TIMEOUT_MS=5000

# ====================
# THING CONFIGURATION
# ====================

THINGS_COUNT=10000
THINGS_START_INDEX=1
DEVICE_ID_TEMPLATE=test-thing-
DEVICE_NAMESPACE=org.eclipse.ditto
CREATE_THINGS=1
CREATE_THINGS_BATCH_SIZE=100
DELETE_THINGS=1

# ====================
# CONNECTION MANAGEMENT
# ====================

CREATE_DITTO_CONNECTIONS=1
DELETE_DITTO_CONNECTIONS=1
CONNECTION_OPEN_MAX_RETRIES=10

# Optional: Provide existing connection IDs to skip creation/deletion
HTTP_PUSH_CONNECTION_ID=
KAFKA_SOURCE_CONNECTION_ID=
KAFKA_TARGET_CONNECTION_ID=

# ====================
# KAFKA CONFIGURATION
# ====================

KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONNECTION_CONSUMER_CONSUMER_COUNT=1
KAFKA_CONNECTION_PROCESSOR_POOL_SIZE=1
KAFKA_CONNECTION_QOS=0
KAFKA_CONNECTION_CUSTOM_ACK=
KAFKA_SOURCE_CONNECTION_CLIENT_COUNT=1
KAFKA_TARGET_CONNECTION_CLIENT_COUNT=1

# Kafka topics
CREATE_UPDATE_THING_CONSUMER_GROUP_ID=group-create-update
CREATE_UPDATE_THING_CONSUMER_MAX_WAIT_DURATION=30s
CREATE_UPDATE_THING_SOURCE_TOPIC=create-update
CREATE_UPDATE_THING_SOURCE_TOPIC_PARTITIONS=1
CREATE_UPDATE_THING_REPLY_TOPIC=create-update-reply
CREATE_UPDATE_THING_REPLY_TOPIC_PARTITIONS=1
DELETE_CREATE_UPDATE_THING_TOPICS=1

# Kafka logging
KAFKA_CONSUMER_LOGGER_ENABLED=0
KAFKA_PRODUCER_LOGGER_ENABLED=0

# ====================
# HTTP PUSH CONNECTION
# ====================

HTTP_PUSH_CONNECTION_CLIENT_COUNT=1
HTTP_PUSH_CONNECTION_PARALLELISM=1
HTTP_PUSH_URI=http://localhost:8081

# ====================
# ARTILLERY CONFIGURATION
# ====================

ARTILLERY_DURATION=45s
ARTILLERY_ARRIVAL_RATE=500

# ====================
# SCENARIO SELECTION
# ====================

# Available: warmup,readThings,searchThings,modifyThings,deviceLiveMessages
# Empty string = cleanup-only mode
SCENARIOS_TO_RUN=readThings,searchThings,modifyThings,deviceLiveMessages

# ====================
# CHANNEL WEIGHTS
# ====================

# Format: <SCENARIO>_<CHANNEL>_WEIGHT (0 = disabled)
READ_THINGS_HTTP_WEIGHT=1

SEARCH_THINGS_HTTP_WEIGHT=1

MODIFY_THINGS_HTTP_WEIGHT=1
MODIFY_THINGS_WEBSOCKET_TWIN_WEIGHT=1
MODIFY_THINGS_KAFKA_WEIGHT=1

DEVICE_LIVE_MESSAGES_HTTP_WEIGHT=1
DEVICE_LIVE_MESSAGES_WEBSOCKET_LIVE_WEIGHT=1

# ====================
# WARMUP
# ====================

RUN_WARMUP=1
THINGS_WARMUP_MAX_DURATION=2m
THINGS_WARMUP_BATCH_SIZE=100

# ====================
# CLEANUP ONLY MODE
# ====================

# Set to 1 to only run cleanup (delete things, connections, topics)
CLEANUP_ONLY=0

# ====================
# DEBUG
# ====================

DEBUG_LOGGING=0
