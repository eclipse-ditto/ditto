<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.eclipse.ditto</groupId>
        <artifactId>ditto-signals-commands</artifactId>
        <version>${revision}</version>
    </parent>

    <artifactId>ditto-signals-commands-common</artifactId>
    <packaging>bundle</packaging>
    <name>Eclipse Ditto :: Signals :: Commands :: Common</name>

    <dependencies>
        <!-- ### Compile ### -->
        <dependency>
            <groupId>org.eclipse.ditto</groupId>
            <artifactId>ditto-signals-commands-base</artifactId>
        </dependency>

        <!-- Testing -->
        <dependency>
            <groupId>org.eclipse.ditto</groupId>
            <artifactId>ditto-signals-commands-base</artifactId>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Import-Package>
                            !org.eclipse.ditto.utils.jsr305.annotations,
                            org.eclipse.ditto.*
                        </Import-Package>
                        <Export-Package>
                            org.eclipse.ditto.signals.commands.common.*
                        </Export-Package>
                    </instructions>
                </configuration>
            </plugin>

            <plugin>
                <groupId>com.github.siom79.japicmp</groupId>
                <artifactId>japicmp-maven-plugin</artifactId>
                <configuration>
                    <parameter>
                        <excludes>
                            <!-- Type of argument 'entityType' changed from String to EntityType. -->
                            <exclude>org.eclipse.ditto.signals.commands.common.purge.PurgeEntities#getTopic(java.lang.String)</exclude>

                            <!-- Type of argument 'entityType' changed from CharSequence to EntityType. -->
                            <exclude>org.eclipse.ditto.signals.commands.common.purge.PurgeEntities#of(java.lang.CharSequence,java.lang.Iterable,org.eclipse.ditto.model.base.headers.DittoHeaders)</exclude>

                            <!-- Type of return value changed from String to EntityType. -->
                            <exclude>org.eclipse.ditto.signals.commands.common.purge.PurgeEntities#getEntityType()</exclude>

                            <!-- Type of argument 'entityType' changed from CharSequence to EntityType. -->
                            <exclude>org.eclipse.ditto.signals.commands.common.purge.PurgeEntitiesResponse#failed(java.lang.CharSequence,org.eclipse.ditto.model.base.headers.DittoHeaders)</exclude>
                            <exclude>org.eclipse.ditto.signals.commands.common.purge.PurgeEntitiesResponse#successful(java.lang.CharSequence,org.eclipse.ditto.model.base.headers.DittoHeaders)</exclude>

                            <!-- Type of return value changed from String to EntityType. -->
                            <exclude>org.eclipse.ditto.signals.commands.common.purge.PurgeEntitiesResponse#getEntityType()</exclude>

                            <!-- Don't add excludes here before checking with the whole Ditto team -->
                            <!--<exclude></exclude>-->
                        </excludes>
                    </parameter>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <systemPropertyVariables>
                    </systemPropertyVariables>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>produce-json-examples</id>
                        <configuration>
                            <mainClass>org.eclipse.ditto.signals.commands.namespaces.examplejson.JsonExamplesProducer
                            </mainClass>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

</project>
