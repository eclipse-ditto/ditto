<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.eclipse.ditto</groupId>
        <artifactId>ditto-signals-commands</artifactId>
        <version>${revision}</version>
    </parent>

    <artifactId>ditto-signals-commands-messages</artifactId>
    <packaging>bundle</packaging>
    <name>Eclipse Ditto :: Signals :: Commands :: Messages</name>

    <dependencies>
        <!-- ### Compile ### -->
        <dependency>
            <groupId>org.eclipse.ditto</groupId>
            <artifactId>ditto-model-messages</artifactId>
        </dependency>

        <dependency>
            <groupId>org.eclipse.ditto</groupId>
            <artifactId>ditto-signals-commands-base</artifactId>
        </dependency>

        <dependency>
            <groupId>org.eclipse.ditto</groupId>
            <artifactId>ditto-model-things</artifactId>
        </dependency>

        <!-- ### Testing ### -->
        <dependency>
            <groupId>org.eclipse.ditto</groupId>
            <artifactId>ditto-signals-commands-base</artifactId>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Import-Package>
                            !org.eclipse.ditto.utils.jsr305.annotations,
                            org.eclipse.ditto.*
                        </Import-Package>
                        <Export-Package>
                            org.eclipse.ditto.signals.commands.messages.*
                        </Export-Package>
                    </instructions>
                </configuration>
            </plugin>

            <plugin>
                <groupId>com.github.siom79.japicmp</groupId>
                <artifactId>japicmp-maven-plugin</artifactId>
                <configuration>
                    <parameter>
                        <ignoreMissingClassesByRegularExpressions>
                            <ignoreMissingClassesByRegularExpression>
                                <!--org.eclipse.ditto.signals.base.WithThingId has been moved to org.eclipse.ditto.model.things.WithThingId-->
                                org.eclipse.ditto.signals.base.WithThingId
                            </ignoreMissingClassesByRegularExpression>
                        </ignoreMissingClassesByRegularExpressions>
                        <excludes>
                            <!-- getEntityId has been added to the WithId interface -->
                            <exclude>
                                org.eclipse.ditto.signals.commands.messages.MessageCommandResponse#getEntityId()
                            </exclude>
                            <exclude>org.eclipse.ditto.signals.commands.messages.MessageCommand#getEntityId()</exclude>

                            <!-- Method getId is still available but defined in an interface -->
                            <exclude>org.eclipse.ditto.signals.commands.messages.MessageCommand#getId()</exclude>
                            <exclude>org.eclipse.ditto.signals.commands.messages.MessageCommandResponse#getId()</exclude>
                        </excludes>
                    </parameter>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
